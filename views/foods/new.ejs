<% layout('layout/boilerplate')%>
<div class="row">
  <h1 class="text-center">Yeni yemek</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/foods"
      method="POST"
      enctype="multipart/form-data"
      novalidate
      class="form-validation"
    >
      <div class="mb-4">
        <label class="form-label" for="title">Başlık</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="food[title]"
          required
        />
        <div class="invalid-feedback">Lütfen bir başlık ekle</div>
      </div>
      <div class="mb-4">
        <label class="form-label" for="location">Şehir</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="food[location]"
          required
        />
        <div class="invalid-feedback">Lütfen bir şehir ekle</div>
      </div>
      <div class="mb-4">
        <label class="form-label" for="price">Fiyat</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">₺</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="food[price]"
            required
          />
          <div class="invalid-feedback">Lütfen bir fiyat gir</div>
        </div>
      </div>

      <div class="mb-4">
        <label class="form-label" for="description">Açıklama</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="food[description]"
          required
        ></textarea>
        <div class="invalid-feedback">Lütfen bir açıklama gir</div>
      </div>
      <div class="mb-4">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input form-control"
            id="photo"
            name="photo"
            multiple
            required
          />
          <div class="invalid-feedback">
            Lütfen dosya ile ilgili hatayı düzelt
          </div>
          <label class="form-file-label" for="photo">
            <span class="form-file-text custom-file-label"
              >Bir veya birden fazla resim ekle</span
            >
            <span class="form-file-button">Yükle</span>
          </label>
        </div>
        <div class="file-validation"></div>
      </div>
      <div class="mb-4">
        <button class="btn btn-dark">Ekle</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/fileValidation.js"></script>
