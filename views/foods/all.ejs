<% layout('layout/boilerplate')%>
<div>
  <a href="/foods/new">Add Food</a>
</div>

<% for (let food of foods){%>
<div class="card mb-4">
  <div class="row">
    <div class="col-md-5">
      <img class="img-fluid" src="<%=food.image%>" />
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <h5 class="card-title"><%= food.title %></h5>
        <p class="card-text"><%= food.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= food.location%></small>
        </p>
        <a class="btn btn-warning" href="/foods/<%=food._id%>"
          >Go <%=food.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
