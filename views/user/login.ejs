<% layout('layout/boilerplate')%>
<h1>Sign In</h1>
<form action="/signin" method="POST" class="form-validation" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">fine!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">fine!</div>
  </div>
  <button class="btn btn-success">Login</button>
</form>
