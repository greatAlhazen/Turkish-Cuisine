<% layout('layout/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1566346289644-4e9c3dce657d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=932&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Kayıt ol</h5>
          <form
            action="/signup"
            method="POST"
            class="form-validation"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">Kullanıcı adı</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="valid-feedback">doğru!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="mail">Mail</label>
              <input
                class="form-control"
                type="mail"
                id="mail"
                name="mail"
                required
              />
              <div class="valid-feedback">doğru!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Şifre</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">doğru!</div>
            </div>
            <button class="btn btn-success btn-block">Kayıt ol</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
