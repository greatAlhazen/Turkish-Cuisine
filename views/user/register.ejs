<% layout('layout/boilerplate')%>
<h1>Sign Up</h1>
<form action="/signup" method="POST" class="form-validation" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">fine!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="mail">Mail</label>
    <input class="form-control" type="mail" id="mail" name="mail" required />
    <div class="valid-feedback">fine!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">fine!</div>
  </div>
  <button class="btn btn-success">Register</button>
</form>
